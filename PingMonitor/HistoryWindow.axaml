<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PingMonitor.ViewModels"
        mc:Ignorable="d"
        x:Class="PingMonitor.HistoryWindow"
        x:DataType="vm:HistoryWindowViewModel"
        Width="800"
        Height="600"
        Title="Ping History"
        Background="{DynamicResource WindowBgBrush}"
        RequestedThemeVariant="Light"
        FontFamily="{DynamicResource CozyFont}">
  <Border Padding="14">
    <DockPanel LastChildFill="True">
      <StackPanel DockPanel.Dock="Top"
                  Orientation="Vertical"
                  Spacing="2"
                  Margin="0,0,0,10">
        <TextBlock Text="Ping History" Classes="Title" />
        <TextBlock Text="Grouped by connectivity and time" Classes="Subtitle" />
      </StackPanel>

      <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
        <TreeView ItemsSource="{Binding Nodes}"
                  Background="Transparent"
                  BorderThickness="0">
          <TreeView.DataTemplates>
            <TreeDataTemplate DataType="vm:PingHistoryNodeViewModel"
                              ItemsSource="{Binding Children}">
              <Border Classes="Card" Margin="6">
                <StackPanel>
                  <TextBlock Text="{Binding Header}"
                             Classes="CardTitle"
                             TextWrapping="Wrap" />
                  <TextBlock Text="{Binding Description}"
                             Classes="CardMeta"
                             TextWrapping="Wrap"
                             Margin="0,4,0,0" />
                </StackPanel>
              </Border>
            </TreeDataTemplate>
          </TreeView.DataTemplates>
        </TreeView>
      </ScrollViewer>
    </DockPanel>
  </Border>
</Window>